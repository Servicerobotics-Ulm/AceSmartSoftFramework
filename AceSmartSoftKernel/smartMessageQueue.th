template <class Item>
void MessageQueue<Item>::enqueue(const Item & item)
{
  ACE_Guard<ACE_Mutex> g(mutex);

//std::cout << "ENQUEUE: PUSH ..." << std::endl;

  queue.push(item);

//std::cout << "ENQUEUE: ... PUSH" << std::endl;

  g.release();
  // notify other thread
  sema.release();
}


